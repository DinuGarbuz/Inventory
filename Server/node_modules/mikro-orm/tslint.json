{
  "rules": {
    "class-name": true,
    "no-console": true,
    "member-access": [true, "no-public"],
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "one-line": [
      true,
      "check-else",
      "check-catch",
      "check-finally",
      "check-open-brace",
      "check-whitespace"
    ],
    "no-var-keyword": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-null-keyword": false,
    "unnecessary-constructor": true,
    "array-type": [true, "array"],
    "arrow-return-shorthand": true,
    "unnecessary-else": true,
    "import-spacing": true,
    "eofline": true,
    "no-irregular-whitespace": true,
    "no-consecutive-blank-lines": true,
    "number-literal-format": true,
    "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
    "type-literal-delimiter": true,
    "space-before-function-paren": [true, {"anonymous": "always", "named": "never", "asyncArrow": "always"}],
    "no-unnecessary-qualifier": true,
    "object-literal-shorthand": true,
    "object-literal-key-quotes": [true, "consistent-as-needed"],
    "no-unnecessary-initializer": true,
    "no-redundant-jsdoc": true,
    "no-angle-bracket-type-assertion": true,
    "binary-expression-operand-order": true,
    "no-duplicate-imports": true,
    "triple-equals": true,
    "use-default-type-parameter": true,
    "no-tautology-expression": true,
    "no-string-throw": true,
    "no-string-literal": true,
    "align": true,
    "prefer-const": true,
    "jsdoc-format": true,
    "lines-between-class-members": [true, 1, {"exceptAfterSingleLine": true}],
    "ter-padded-blocks": [true, {"classes": "always"}]
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules",
    "node_modules/tslint-lines-between-class-members"
  ]
}
